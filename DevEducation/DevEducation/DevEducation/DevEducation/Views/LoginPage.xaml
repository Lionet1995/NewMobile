<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="DevEducation.Views.LoginPage" BackgroundColor="Beige">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Введите логин и пароль" TextColor="Magenta" FontSize="Medium"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Entry x:Name="EntryLogin"
               
                   VerticalOptions="Center" />
            <Entry x:Name ="EntryPassword"
                 
                   VerticalOptions="Center" />
            <Button Text ="Тык-тык" TextColor ="DarkMagenta" BackgroundColor ="Beige"
                Clicked="Button1_Clicked"/>
                   
        </StackLayout>
    </ContentPage.Content>
</ContentPage>